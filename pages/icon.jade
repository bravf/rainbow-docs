extends ./_layout

block title
  | Icon - Rainbow

block content
  h1| Icon 图标

  div(class="anchor")
    h2(id="概述")

  p
    | Rainbow 的图标使用开源项目 
    a(href="http://ionicons.com/", target="_blank")
      r-icon(type="ionic")
      |  ionicons
  
  r-card
    r-tabs(v-model="common.tab")
      r-tab-pane(name="1", label="示例")
        r-icon(type="ionic")
        r-icon(type="arrow-up-a")
        r-icon(type="arrow-right-a")
        r-icon(type="arrow-down-a")
        r-icon(type="arrow-left-a")
        r-icon(type="arrow-up-b")
        r-icon(type="arrow-right-b", color="red")
        r-icon(type="load-c", auto-rotate)

      r-tab-pane(name="2", label="代码")
        pre
          code(class="html")
          textarea.
            <r-icon type="ionic"></r-icon>
            <r-icon type="arrow-up-a"></r-icon>
            <r-icon type="arrow-right-a"></r-icon>
            <r-icon type="arrow-down-a"></r-icon>
            <r-icon type="arrow-left-a"></r-icon>
            <r-icon type="arrow-up-b"></r-icon>
            <r-icon type="arrow-right-b" color="red"></r-icon>
            <r-icon type="load-c" auto-rotate></r-icon>
  
  .anchor
    h2| Api
  
  div(class="r-table r-table-border api")
    table
      thead
        tr
          th
            div| 属性
          th
            div| 说明
          th
            div| 类型
          th
            div| 默认值
      tbody
        //- 
        tr
          td
            div| type
          td
            div| 图标名称
          td
            div| Sring
          td
            div| -

        //- 
        tr
          td
            div| size
          td
            div| 图标大小，单位px
          td
            div| Sring | Number
          td
            div| -
        
        //- 
        tr
          td
            div| color
          td
            div| 图标颜色
          td
            div| Sring
          td
            div| -
        
        //- 
        tr
          td
            div| auto-rotate
          td
            div| 图标是否自动360°旋转
          td
            div| Boolean
          td
            div| -
      
block script
  script.
    new Vue({
      el: '#app',
      watch: {
        'common.componentValue' () {
          location.href = this.common.componentValue + '.html'
        }
      },
      data () {
        return {
          common: {
            componentValue: '',
            activeMenu: '2-4',
            tab: ''
          }
        }
      }
    })