extends ./_layout

block title
  | Select - Rainbow

block content
  h1| Select 选择器

  div(class="anchor")
    h2(id="概述")

  .anchor
    h3| select 单选

  r-card
    r-tabs(v-model="common.tab")
      r-tab-pane(name="1", label="示例")
        r-select(
          v-model="currCity",
          clearable,
          filterable
        )
          r-select-option(
            v-for="city in cities",
            :label="city.label",
            :value="city.value",
            :key="city.value",
          )

      r-tab-pane(name="2", label="代码")
        pre
          code(class="html")
          textarea.
            <r-select v-model="currCity" clearable filterable>
              <r-select-option v-for="city in cities" :label="city.label" :value="city.value" :key="city.value"></r-select-option>
            </r-select>

            <script>
            var cities = []
            for (var i=0; i<12; i++){
              cities.push({
                value: i,
                label: '北京' + i,
              })
            }

            exprot default {
              data () {
                return {
                  currCity: '',
                  cities: cities,
                }
              }
            }
            </script>
  
  .anchor
    h3| select 多选

  r-card
    r-tabs(v-model="common.tab2")
      r-tab-pane(name="1", label="示例")
