    var cities = []
    for (var i=0; i<12; i++){
      cities.push({
        value: i,
        label: '北京' + i,
      })
    }

    new Vue({
      el: '#app',
      watch: {
        'common.componentValue' () {
          location.href = this.common.componentValue + '.html'
        }
      },
      data () {
        return {
          common: {
            componentValue: '',
            activeMenu: '3-5',
            tab: '',
            tab2: ''
          },
          currCity: '',
          currCities: [],
          cities: cities,
        }
      },
      methods: {
        clickIcon () {
          this.common.input1 = ''
        }
      }
    })