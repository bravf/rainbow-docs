  script.
    new Vue({
      el: '#app',
      watch: {
        'common.componentValue' () {
          location.href = this.common.componentValue + '.html'
        }
      },
      data () {
        return {
          common: {
            componentValue: '',
            activeMenu: '3-8',
            tab: '',
            tab2: ''
          },
          images: [
            {
              name: '图片1', 
              url: 'https://ss0.bdstatic.com/5aV1bjqh_Q23odCf/static/superman/img/logo/bd_logo1_31bdc765.png'
            },
          ],
        }
      },
      methods: {
        onSuccess (res, file) {
          this.images.push({
            name: file.name,
            url: res.id
          })
        },
        onError (e, res, file) {
          this.$message(file.name + '上传失败', 'error')
        },
        onRemove (file) {
          this.$message(file.name + '被删除', 'warning')
        },
        onPreview (file) {
          this.$alert(file.url)
        },
        beforeUpload (file, callback){
          if (file.name.indexOf('.html') !== -1){
            this.$message('不能上传.html')
            callback(false)
          }
          else {
            callback(true)
          }
        }
      }
    })