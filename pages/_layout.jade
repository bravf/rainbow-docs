doctype
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
      block title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href="../static/libs/rainbow/rainbow-ui@1.7.9.min.css")
    link(rel='stylesheet', href="../static/libs/highlight/highlight@9.12.0.min.css")
    link(rel='stylesheet', href="../static/libs/highlight/vs.min.css")
    
    script(src="../static/libs/vue/vue.js")
    script(src="../static/libs/rainbow/rainbow-ui@1.7.9.min.js")
    script(src="../static/libs/highlight/highlight@9.12.0.min.js")

    style.
      [v-cloak] {
        display: none;
      }
      .demo-header{
        height: 60px;
      }
      .code-font{
        font-family: Consolas,Menlo,Courier,monospace;
      }
      .demo-header h1{
        font-family: Consolas,Menlo,Courier,monospace;
      }
      pre code{
        font-family: Consolas,Menlo,Courier,monospace;
        line-height: 2;
      }
      pre textarea{
        display: none;
      }
      .hljs{
        background-color: #f7f7f7;
      }
      .hljs-name{
        color: #6089ec;
        font-weight: normal;
      }

      .anchor{
        margin-top: 30px;
      }
      .anchor h2, .anchor h3{
        margin-bottom: 10px;
      }

      .margin-top-10{
        margin-top: 10px;
      }

      .api table{
        font-family: Consolas,Menlo,Courier,monospace;
      }
      .api table th{
        white-space: nowrap;
      }


  body
    r-app(id="app", v-cloak)
      r-row(slot="header", align-items="center", class="demo-header")
        r-col(:span="3", style="padding-left: 10px; color: #409EFF")
          h1()| Rainbow

        r-col(:span="4")
          r-select(
            placeholder="搜索组件...", 
            filterable,
            v-model="common.componentValue"
          )
            
            //- Basic
            r-select-option(label="Grid栅格", value="grid")
            r-select-option(label="App布局", value="app")
            r-select-option(label="Button按钮", value="button")
            r-select-option(label="Icon图标", value="icon")

            //- Form
            r-select-option(label="Input输入框", value="input")
            r-select-option(label="Radio单选框", value="radio")
            r-select-option(label="Checkbox多选框", value="checkbox")
            r-select-option(label="Table表格", value="table")
            r-select-option(label="Select选择器", value="select")
            r-select-option(label="Datepicker日期选择器", value="datepicker")
            r-select-option(label="Timepicker时间选择器", value="timepicker")
            r-select-option(label="Upload上传", value="upload")
            r-select-option(label="Form表单", value="form")

            //- View 
            r-select-option(label="Card卡片", value="card")
            r-select-option(label="Message全局提示", value="message")
            r-select-option(label="Modal对话框", value="modal")
            r-select-option(label="Progress进度条", value="progress")
            r-select-option(label="Timeline时间轴", value="timeline")
            r-select-option(label="Tag标签", value="tag")
            r-select-option(label="Tooltip文字提示", value="tooltip")
            r-select-option(label="Tree树形控件", value="tree")
            r-select-option(label="Breadcrumb面包屑", value="breadcrumb")

            //- navigation
            r-select-option(label="Menu导航菜单", value="menu")
            r-select-option(label="Tabs标签页", value="tabs")
            r-select-option(label="Dropdown下拉菜单", value="dropdown")
            r-select-option(label="Page分页", value="page")

      r-menu(
        slot="aside",
        mode="vertical",
        v-model="common.activeMenu",
        expand
      )

        r-menu-item(name="1", href="start.html")
          | 快速上手
        
        //- Basic
        r-sub-menu(name="2")
          template(slot="title")
            | Basic
          
          r-menu-item(name="2-1", href="grid.html")
            r-icon(type="ios-grid-view-outline")
            | Grid 栅格
          
          r-menu-item(name="2-2", href="app.html")
            r-icon(type="ios-browsers-outline")
            | App 布局
          
          r-menu-item(name="2-3", href="button.html")
            r-icon(type="social-youtube-outline")
            | Button 按钮

          r-menu-item(name="2-4", href="icon.html")
            r-icon(type="ios-heart-outline")
            | Icon 图标

        //- Form
        r-sub-menu(name="3")
          template(slot="title")
            | Form
          
          r-menu-item(name="3-1", href="input.html")
            r-icon(type="ios-compose-outline")
            | Input 输入框
          
          r-menu-item(name="3-2", href="radio.html")
            r-icon(type="ios-circle-filled")
            | Radio 单选框
          
          r-menu-item(name="3-3", href="checkbox.html")
            r-icon(type="android-checkbox-outline")
            | Checkbox 多选框

          r-menu-item(name="3-4", href="table.html")
            r-icon(type="ios-grid-view")
            | Table 表格

          r-menu-item(name="3-5", href="select.html")
            r-icon(type="ios-arrow-down")
            | Select 选择器
          
          r-menu-item(name="3-6", href="datepicker.html")
            r-icon(type="ios-calendar-outline")
            | DatePicker 日期选择器
          
          r-menu-item(name="3-7", href="timepicker.html")
            r-icon(type="ios-clock-outline")
            | TimePicker 时间选择器
          
          r-menu-item(name="3-8", href="upload.html")
            r-icon(type="ios-cloud-upload-outline")
            | Upload 上传
          
          r-menu-item(name="3-9", href="form.html")
            r-icon(type="ios-list-outline")
            | Form 表单
        
        //- View
        r-sub-menu(name="4")
          template(slot="title")
            | View
          
          r-menu-item(name="4-1", href="card.html")
            r-icon(type="ios-browsers-outline")
            | Card 卡片
          
          r-menu-item(name="4-2", href="message.html")
            r-icon(type="ios-information-outline")
            | Message 全局提示
          
          r-menu-item(name="4-3", href="modal.html")
            r-icon(type="ios-chatbubble-outline")
            | Modal 对话框

          r-menu-item(name="4-4", href="progress.html")
            r-icon(type="android-remove")
            | Progress 进度条
          
          r-menu-item(name="4-5", href="timeline.html")
            r-icon(type="android-more-vertical")
            | Timeline 时间轴
          
          r-menu-item(name="4-6", href="tag.html")
            r-icon(type="ios-pricetags-outline")
            | Tag 标签
          
          r-menu-item(name="4-7", href="tooltip.html")
            r-icon(type="chatbox-working")
            | Tooltip 文字提示
          
          r-menu-item(name="4-8", href="tree.html")
            r-icon(type="network")
            | Tree 树形控件
          
          r-menu-item(name="4-9", href="breadcrumb.html")
            r-icon(type="aperture")
            | Breadcrumb 面包屑
        
        //- Navigation
        r-sub-menu(name="5")
          template(slot="title")
            | Navigation
          
          r-menu-item(name="5-1", href="menu.html")
            r-icon(type="navicon-round")
            | Menu 导航菜单
          
          r-menu-item(name="5-2", href="tabs.html")
            r-icon(type="social-windows-outline")
            | Tabs 标签页
          
          r-menu-item(name="5-3", href="dropdown.html")
            r-icon(type="arrow-down-b")
            | Dropdown 下拉菜单

          r-menu-item(name="5-4", href="page.html")
            r-icon(type="ios-book-outline")
            | Page 分页
      
      div(slot="main")
        block content

    block script


script.
  setTimeout(function (){
    var preNodes = document.getElementsByTagName('pre')
    for (var i=0, preNode, codeNode, textNode; i<preNodes.length; i++){
      preNode = preNodes[i]
      codeNode = preNode.querySelector('code')
      textNode = preNode.querySelector('textarea')

      codeNode.innerText = textNode.value.trim()
      hljs.highlightBlock(codeNode)
    }
  }, 100)
