extends ./_layout

block title
  | Button - Rainbow

block content
  h1| Button 按钮

  div(class="anchor")
    //- 常规按钮
    h2| 按钮

  r-card
    r-tabs(v-model="common.tab")
      r-tab-pane(name="1", label="示例")
        r-button(type="default")| 默认按钮
        r-button(type="primary")| 主色按钮
        r-button(type="success")| 绿色按钮
        r-button(type="danger")| 红色按钮
        r-button(type="warning")| 黄色按钮
        
        br
        br
        
        r-button(type="default", size="small")| 默认按钮
        r-button(type="primary", size="small")| 主色按钮
        r-button(type="success", size="small")| 绿色按钮
        r-button(type="danger", size="small")| 红色按钮
        r-button(type="warning", size="small")| 黄色按钮

        br
        br

        r-button(type="primary", long)| long按钮

        br

        r-button(icon="plus-round")| 添加
        r-button(icon="plus-round", icon-pos="after")| 添加
        r-button(icon="plus-round")
        r-button(icon="plus-round", loading)| 提交信息

      r-tab-pane(name="2", label="代码")
        pre
          code(class="html")
          textarea.
            <r-button type="default">默认按钮</r-button>
            <r-button type="primary">主色按钮</r-button>
            <r-button type="success">绿色按钮</r-button>
            <r-button type="danger">红色按钮</r-button>
            <r-button type="warning">黄色按钮</r-button>
            
            <br><br>
            
            <r-button type="default" size="small">默认按钮</r-button>
            <r-button type="primary" size="small">主色按钮</r-button>
            <r-button type="success" size="small">绿色按钮</r-button>
            <r-button type="danger" size="small">红色按钮</r-button>
            <r-button type="warning" size="small">黄色按钮</r-button>
            
            <br><br>
            
            <r-button type="primary" long>long按钮</r-button>
            
            <br>
            
            <r-button icon="plus-round">添加</r-button>
            <r-button icon="plus-round" icon-pos="after">添加</r-button>
            <r-button icon="plus-round"></r-button>
            <r-button icon="plus-round" loading>提交信息</r-button>
  
  div(class="anchor")
    //- 按钮组
    h2| 按钮组

  r-card
    r-tabs(v-model="common.tab2")
      r-tab-pane(name="1", label="示例")
        r-button-group
          r-button| 昨日
          r-button(disabled)| 今日
          r-button| 明日

      r-tab-pane(name="2", label="代码")
        pre
          code(class="html")
          textarea.
            <r-button-group>
              <r-button>昨日</r-button>
              <r-button disabled>今日</r-button>
              <r-button>明日</r-button>
            </r-button-group>
  
  div(class="anchor")
    //- Api
    h2| API

  div(class="anchor")
    h3| Button props

  div(class="r-table r-table-border api")
    table
      thead
        tr
          th
            div| 属性
          th
            div| 说明
          th
            div| 类型
          th
            div| 默认值
      tbody
        //- 
        tr
          td
            div| type
          td
            div| 按钮类型，可选值为default、primary、success、danger、warning
          td
            div| Sring
          td
            div| default
        
        //- 
        tr
          td
            div| size
          td
            div| 按钮大小，可选值small
          td
            div| String
          td
            div| -
        
        //- 
        tr
          td
            div| long
          td
            div| 开启后，按钮长度100%
          td
            div| Boolean
          td
            div| false
        
        //- 
        tr
          td
            div| html-type
          td
            div| 设置button原声的type, 可选值button, submit, reset
          td
            div| String
          td
            div| Button

        //- 
        tr
          td
            div| disabled
          td
            div| 设置按钮为禁用状态
          td
            div| Boolean
          td
            div| false
        
        //- 
        tr
          td
            div| loading
          td
            div| 设置按钮为加载状态
          td
            div| Boolean
          td
            div| false
        
        //- 
        tr
          td
            div| icon
          td
            div| 设置按钮图标样式
          td
            div| String
          td
            div| -
        
        //- 
        tr
          td
            div| icon-pos
          td
            div| 设置按钮图标位置，可选值before, after
          td
            div| String
          td
            div| before

  div(class="anchor")
    h3| ButtonGroup props

  div(class="r-table r-table-border api")
    table
      thead
        tr
          th
            div| 属性
          th
            div| 说明
          th
            div| 类型
          th
            div| 默认值
      tbody
        tr
          td
            div| size
          td
            div| 按钮大小，可选值small
          td
            div| String
          td
            div| -

