extends ./_layout

block title
  | Tooltip - Rainbow

block content
  h1| Tooltip 文字提示

  div(class="anchor")
    h2(id="概述")

  r-card
    r-tabs(v-model="common.tab")
      r-tab-pane(name="1", label="示例")
        r-tooltip(content="hello,world", placement="bottom-end")
          r-button| bottom-end

      r-tab-pane(name="2", label="代码")
        pre
          code(class="html")
          textarea(v-pre).
            <r-tooltip content="hello,world" placement="bottom">
              <r-button>bottom</r-button>
            </r-tooltip>
          
  .anchor
    h2| Api
  
  .anchor
    h3| Tooltip props
  
  div(class="r-table r-table-border api")
    table
      thead
        tr
          th
            div| 属性
          th
            div| 说明
          th
            div| 类型
          th
            div| 默认值
      tbody
        //- 
        tr
          td
            div| content
          td
            div| 显示的内容
          td
            div| String | Number
          td
            div| -
        
        //- 
        tr
          td
            div| placement
          td
            div| 提示框出现的位置，可选值为top top-start top-end bottom bottom-start bottom-end left left-start left-end right right-start right-end
          td
            div| String
          td
            div| bottom
  
  .anchor
    h3| Tooltip slot
  
  div(class="r-table r-table-border api")
    table
      thead
        tr
          th
            div| 名称
          th
            div| 说明

      tbody
        //- 
        tr
          td
            div| content
          td
            div| 提示框的内容，定义此 slot 时，会覆盖 props content

